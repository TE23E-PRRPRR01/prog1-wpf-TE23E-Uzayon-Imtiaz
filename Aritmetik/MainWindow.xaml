<Window x:Class="Aritmetik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aritmetik"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <Label FontSize="64" FontWeight="Bold">Aritmetiken</Label>
        <Label FontSize="20" FontWeight="Bold">Tal 1:</Label>
        <TextBox Name="txbTal1" Padding="5" Margin="2"></TextBox>
        <Label FontSize="20" FontWeight="Bold">Operator (+, -, *, /):</Label>
        <TextBox Name="txbOperator" Padding="5" Margin="2"></TextBox>
        <Label FontSize="20" FontWeight="Bold">Tal 2:</Label>
        <TextBox Name="txbTal2" Padding="5" Margin="2"></TextBox>
        <Button Click="KlickBeräkna" Padding="5" Margin="2">Beräkna</Button>
        <Label Name="lblResultat"></Label>
    </StackPanel>
</Window>
