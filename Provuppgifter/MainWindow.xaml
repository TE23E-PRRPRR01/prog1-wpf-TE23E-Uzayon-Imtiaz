<Window x:Class="Provuppgifter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Provuppgifter"
        mc:Ignorable="d"
        Title="Provuppgifter" Height="450" Width="800" SizeToContent="WidthAndHeight" Background="#ffd0b0">
    <StackPanel Margin="10">
        <Label FontSize="38" FontWeight="Bold" Margin="5">Portoräknare</Label>
        <Label FontSize="22" FontWeight="Bold" Margin="5">Vikt (gram):</Label>
        <TextBox Name="tbxVikt" Height="40" Margin="10" Padding="5"></TextBox>
        <Button Click="BeräknaPorto" Margin="10" Padding="5">Beräkna porto</Button>
    </StackPanel>
</Window>